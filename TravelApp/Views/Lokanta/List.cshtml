@model IEnumerable<Lokanta>
@{
    ViewData["Title"] = "List";
}

<div class="container mt-3">
    <h2 style="color:crimson;text-align:center">
        ~~Lokantalar~~
    </h2>
    <hr />
    <div>
        <a class="btn btn-primary" href="/Lokanta/Create">Create</a>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Lokanta Resim</th>
                            <th>Lokanta Ad</th>
                            <th>Lokanta Açıklama</th>
                            <th>Lokanta Telefon</th>
                            <th>Lokanta Adres</th>
                            <th>Lokanta Puan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LokantaId</td>
                                <td>
                                    <img src="~/img/Lokanta/@item.lokantaImage" width="100" />
                                </td>
                                <td>@item.lokantaAd</td>
                                <td>@item.lokantaAciklama</td>
                                <td>@item.lokantaTel </td>
                                <td>@item.lokantaAdres</td>
                                <td>@item.lokantaPuan</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Lokanta" asp-action="Edit" asp-route-id="@item.LokantaId">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Lokanta" asp-action="Delete" asp-route-id="@item.LokantaId">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Lokanta Eklenmemiş.
                </div>
            }

        </div>
    </div>
</div>