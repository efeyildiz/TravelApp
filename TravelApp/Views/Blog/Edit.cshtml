@model Blog
@{
    ViewData["Title"] = "Edit";
}
@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("BlogBody");
    </script>
}
<div class="container">
    <h2>Blog Düzenle</h2>
    <br />

    <form asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="BlogId" />
        <input type="hidden" asp-for="BlogImage" />

        <div class="form-group">
            <label asp-for="BlogTittle">Blog Başlığı</label>
            <input asp-for="BlogTittle" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="BlogDescription">Blog Açıklaması</label>
            <textarea asp-for="BlogDescription" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="BlogBody">Blog Yazısı</label>
            <textarea asp-for="BlogBody" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <img src="~/img/blog/@Model.BlogImage" width="120" />
            <input type="file" name="file" id="file" class="form-control">
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="isShared" class="form-check-input">
                Blog Yayınlansın Mı?
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="isSlider" class="form-check-input">
                Blog Slider'da Gözüksün Mü?
            </label>
        </div>



        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

