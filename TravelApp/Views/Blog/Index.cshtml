@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<div class="col-md-8 container">
    <div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
        <ol class="carousel-indicators">

            @for (int i = 0; i < Model.Count(); i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            @{ var index = 0;}
            @foreach (var item in Model)
            {

                if (item.isSlider == true)
                {
                    if (index == 0)
                    {
                        <div class="carousel-item active">
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                <img class="d-block w-100" src="~/img/@item.BlogImage" alt="@item.BlogTittle">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>@item.BlogTittle</h3>
                                </div>
                            </a>
                        </div>

                        index++;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                <img class="d-block w-100" src="~/img/@item.BlogImage" alt="@item.BlogTittle">
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>@item.BlogTittle</h3>
                                </div>
                            </a>
                        </div>
                    }
                }
            }


        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br />


@foreach (var item in Model)
{
    <hr />
    <br />
    <div class="media container">
        <img src="~/img/Blog/@item.BlogImage" class="align-self-center mr-3" style="height:200px" alt="...">
        <div class="media-body">
            <h5 class="mt-0">@item.BlogTittle</h5>
            <p>@item.BlogDescription</p>
        </div>
        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-primary">Blog Yazısına Git</a>
    </div>

    <br />
    <hr />
}






