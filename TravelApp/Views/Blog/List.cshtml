@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
}

<div class="container mt-3">
    <h2 style="color:crimson;text-align:center">
        ~~BLOGLAR~~
    </h2>
    <hr />
    <div>
        <a class="btn btn-primary" href="/Blog/Create">Create</a>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>is Shared</th>
                            <th>is Slider</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.BlogId</td>
                            <td>
                                <img src="~/img/@item.BlogImage" width="100" />
                            </td>
                            <td>@item.BlogTittle</td>
                            <td>@item.BlogDescription</td>
                            <td style="text-align:center">
                                @if (item.isShared)
                                {

                                    <i class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                }
                            </td>
                            <td style="text-align:center">
                                @if (item.isSlider)
                                {

                                    <i class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Edit" asp-route-id="@item.BlogId">
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog Eklenmemiş.
                </div>
            }

        </div>
    </div>
</div>
