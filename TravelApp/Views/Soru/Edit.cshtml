@model Soru
@{
    ViewData["Title"] = "Edit";
}

@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Cevap");
    </script>
}
<div class="container">
    <h2>Soruyu Cevapla</h2>
    <br />

    <form asp-controller="Soru" asp-action="Edit" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="SoruId" />


        <div class="form-group">
            <label asp-for="soruTittle">Başlık</label>
            <input asp-for="soruTittle" class="form-control">
        </div>


        <div class="form-group ">
            <label asp-for="soruBody">Soru</label>
            <textarea asp-for="soruBody" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Cevap">Cevap</label>
            <textarea asp-for="Cevap" class="form-control"></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>

</div>


