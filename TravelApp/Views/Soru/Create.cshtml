@model Soru
@{
    ViewData["Title"] = "Create";
}

@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("soruBody");
    </script>
}
<div class="container">
    <h2>Soru Sor</h2>
    <br />

    <form asp-controller="Soru" asp-action="Create" method="post">

        <input type="hidden" asp-for="SoruId" />
        <div class="form-group">
            <label asp-for="soruTittle">Başlık</label>
            <input asp-for="soruTittle" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="soruBody">Soru</label>
            <textarea asp-for="soruBody" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>

</div>



